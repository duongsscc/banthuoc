<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemX"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="#ffffff"
    android:gravity="center"
    android:clickable="true"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/anhirecyle"
                android:layout_width="256px"
                android:layout_height="180px"
                android:src="@drawable/thuoc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTenthuoc"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="ten"
                    android:textColor="#080808" />

                <TextView
                    android:id="@+id/textMota"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="mota"
                    android:textColor="#080808" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="soluong:"
                        android:textColor="#051f7c" />


                    <TextView
                        android:id="@+id/textSoLuong"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="40dp"
                        android:gravity="center"
                        android:text="XXX"
                        android:textColor="#080808" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="Giá tiền:"
                        android:textColor="#051f7c" />

                    <TextView
                        android:id="@+id/textGiatien"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="XXXXXX"
                        android:textColor="#080808" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="vnd"
                        android:textColor="#080808" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/angry_btn"
                        android:gravity="center"
                        android:layout_width="102dp"
                        android:layout_height="50dp"
                        android:background="@drawable/buttonshape"
                        android:shadowColor="#A8A8A8"
                        android:shadowRadius="5"
                        android:text="Vào Giỏ"
                        android:textColor="#335784"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>