<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_giohang"
    tools:context=".Dichvu.listgiohang.GiohangFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.RecyclerView
        android:background="#8f2e33"
        android:id="@+id/listRethuocGioHang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:padding="10dp"
        android:background="#edeaea"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#605957"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="Tổng Tiền: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#f12d01"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="0 VND"
                android:id="@+id/textTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnXacNhanDonHang"
                android:shadowColor="#ffff"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:background="@drawable/buttonpaymentshape"
                android:text="Xác nhận đơn hàng"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>